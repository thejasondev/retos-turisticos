---
import { Image } from 'astro:assets'; // Para optimizar el logo
// Asegúrate de tener un logo.svg en public/
// import logo from '../assets/logo.svg'; // Si prefieres usar assets de src/
---
<header class="bg-white sticky top-0 z-50 shadow-soft js-header-section">
  <nav class="container mx-auto px-6 py-4 flex justify-between items-center">
    <!-- Logo -->
    <a href="/" class="flex items-center space-x-1 font-bold text-xl logo-group group">
      <span class="brand-text-primary">Retos</span><span class="brand-text-secondary">Turísticos</span>
    </a>

    <!-- Menú de escritorio -->
    <div class="hidden md:flex space-x-6">
      <a href="#mision" class="text-text-medium hover:text-primary font-medium transition-colors duration-300">Sobre nosotros</a>
      <a href="#equipo" class="text-text-medium hover:text-primary font-medium transition-colors duration-300">Nuestro equipo</a>
      <a href="#articulos-destacados" class="text-text-medium hover:text-primary font-medium transition-colors duration-300">Artículos destacados</a>
      <a href="#contacto" class="text-text-medium hover:text-primary font-medium transition-colors duration-300">Contacto</a>
    </div>

    <!-- Botón Hamburger para móvil -->
    <div class="md:hidden">
      <button id="mobile-menu-button" class="text-text-dark focus:outline-none p-1" aria-label="Abrir menú móvil" aria-expanded="false" aria-controls="mobile-menu-overlay">
        <svg id="hamburger-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
         <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
         </svg>
      </button>
    </div>
  </nav>

  <!-- Menú desplegable lateral móvil -->
  <div id="mobile-menu-overlay" 
       class="fixed inset-0 z-40 md:hidden bg-black/30 opacity-0 pointer-events-none transition-opacity duration-300 ease-in-out"
       aria-hidden="true" 
       tabindex="-1"> 
    </div>
  <div id="mobile-menu-panel"
       class="fixed top-0 right-0 bottom-0 z-50 md:hidden w-full max-w-xs sm:max-w-sm bg-white shadow-xl transform translate-x-full transition-transform duration-300 ease-in-out"
       aria-hidden="true">
    <div class="p-6 h-full flex flex-col">
      <div class="flex justify-between items-center mb-8">
        <a href="/" class="flex items-center space-x-1 font-bold text-lg logo-group group">
           <span class="brand-text-primary">Retos</span><span class="brand-text-secondary">Turísticos</span>
        </a>
        <button id="mobile-menu-close-button" class="p-1 text-text-medium hover:text-primary focus:outline-none" aria-label="Cerrar menú móvil">
           <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
             <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
           </svg>
        </button>
      </div>
      <nav class="flex flex-col space-y-5 flex-grow">
        <a href="#inicio" class="block text-text-medium hover:text-primary transition-colors duration-300 text-lg">Inicio</a>
        <a href="#mision" class="block text-text-medium hover:text-primary transition-colors duration-300 text-lg">Sobre nosotros</a>
        <a href="#equipo" class="block text-text-medium hover:text-primary transition-colors duration-300 text-lg">Nuestro equipo</a>
        <a href="#articulos-destacados" class="block text-text-medium hover:text-primary transition-colors duration-300 text-lg">Artículos destacados</a>
        <a href="#contacto" class="block text-text-medium hover:text-primary transition-colors duration-300 text-lg">Contacto</a>
      </nav>
      <!-- Puedes añadir un footer al menú si quieres -->
       <div class="mt-8 text-center text-sm text-text-light">
         © {new Date().getFullYear()} Retos Turísticos
       </div>
    </div>
  </div>
</header>

<style>
  /* Clases para el texto bicolor de la marca */
  .brand-text-primary {
    @apply text-primary transition-colors duration-300;
  }
  .brand-text-secondary {
    @apply text-text-dark transition-colors duration-300;
  }
  /* Efecto hover en el logo completo */
  .group:hover .brand-text-primary {
    @apply text-secondary;
  }
  .group:hover .brand-text-secondary {
    @apply text-primary;
  }
  /* Ensure body scroll lock works */
  body.overflow-hidden {
    overflow: hidden;
  }
</style>
